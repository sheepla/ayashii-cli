#!/bin/bash

set -o errexit
set -o nounset

readonly AUTHOR_URL='https://github.com/sheepla'
readonly REPO_URL="${AUTHOR_URL}/ayashii-cli"

function _help() {
    echo -e "
ayashii -- AYASHII NIHONGO CLI: Convert from normal Japanese text to AYASHII NIHONGO.

USAGE
    ayashii TEXT        # from arguments
    echo TEXT | ayashii # from stdin
    ayashii --help      # Show this help.

EXAMPLE
    $ ayashii これは正しい日本語です！
    これは正レい日本语てず！
    $ echo これは正しい日本語です！ | ayashii
    これは正レい日本语てず！

REPO
    Repository:      ${REPO_URL}
    Author:          sheepla (${AUTHOR_URL})
    Licence:         MIT
"
}

function _err() {
    echo -e "[\e[31m ERR \e[m] ${*}"
}

function _to_ayashii() {
    text="${*}"
    echo "$text" | sed '
    # source: https://github.com/Submarinonline/cjp.js/tree/master/dict

    # emoji.json
    s/🇦🇺/🇨🇳/g
    s/🇯🇵/🇨🇳/g
    s/🇰🇷/🇨🇳/g
    s/🎌/🇨🇳/g

    # common.json
    s/(?<!おやすみ|ごめん)なさい/（しなさい）/g
    s/(?<!はい)はい(?=、|。|」|$)/ばい/g
    s/(?<=[0-9]|十|百|千|万|億|兆)円/日元/g
    s/(?<=优秀の)品/良品/g
    s/(?<=优秀の)商品/良品/g
    s/(?<=优秀の)製品/良品/g
    s/(?<=優秀|优秀)の/の/g
    s/(?<=優秀|最高)な/の/g
    s/(?<=暑)い(?=日)/の/g
    s/\(しなさい\)|（しなさい）/（しなさい）/g
    s/いけない/ぃげない/g
    s/おめでとう(?=。|$)/恭喜！/g
    s/おめでとう(?=！|!)/恭喜/g
    s/かしこい(?!。|$)/优秀の/g
    s/ください/くたちい/g
    s/こんにちは/ごんにさは/g
    s/こんばんは/ごんはんば/g
    s/さようなら/ちよラなら/g
    s/しなさい|しましょう|しろよ|やれよ/ずゑ（しなさい）/g
    s/すごく|とても|めっちゃ|かなり/極度/g
    s/そうか/そラか/g
    s/それ/そね/g
    s/だ(?=」)/た！/g
    s/だ。/た！/g
    s/ちん/ㄘん/g
    s/なっている/なっこいゐ/g
    s/なります(?=。|」|$)/なゑ/g
    s/りなさい/る（しなさい）/g
    s/わかって/わがっご/g
    s/アカウント/マカウソト/g
    s/イクラ/イグう/g
    s/カレー/力しー/g
    s/ガンバレ/ガソ八"し/g
    s/ギョーザ/ギョザー/g
    s/スペック/ﾇﾍﾟｯｹ/g
    s/スポーツ/ヌポ一ッ/g
    s/トロ/ドロ/g
    s/ヒラメ/匕うメ/g
    s/ファミリー/ファミりー/g
    s/マグロ/マゲ口/g
    s/メディアリテラシー/メディアソテラツ一/g
    s/ラーメン/うーメソ/g
    s/レストラン/レヌトうン/g
    s/ログイン/登录/g
    s/ヲタク/ラ夕ク/g
    s/乾燥/極度乾燥/g
    s/偉い(?!。|$)/优秀の/g
    s/僕|ぼく|私|わたし|わたくし|あたし|俺/仆/g
    s/前代未聞/前所未有/g
    s/国旗/五星红旗/g
    s/地下鉄/地铁/g
    s/大変だ/大變た！/g
    s/新しい生活様式/新レい生活贵樣式/g
    s/最高な(?=品|商品|製品)/优秀の/g
    s/最高の(?=品|商品|製品)/优秀の/g
    s/極上の(?=品|商品|製品)/优秀の/g
    s/極上品/极品/g
    s/注意(?=。|$)/注意てず（しなさい）/g
    s/注意しなさい(?=。|$)/注意てず（しなさい）/g
    s/注意しましょう(?=。|$)/注意てず（しなさい）/g
    s/注意しろよ(?=。|$)/注意てず（しなさい）/g
    s/知恵/智慧/g
    s/祝う/庆祝する/g
    s/見よ(?=。|$)/见よ（見なさい）/g
    s/貴様|お前|君|貴方|きみ|あなた|あんた/贵樣/g
    s/賢い(?!。|$)/优秀の/g
    s/購入/购买/g
    s/飲む/饮ずゐ/g

    # propernoun.json
    s/Amazon/亚马逊/g
    s/Ascend/昇騰/g
    s/Balong/巴龙/g
    s/Da Zhang Wei/大张伟/g
    s/Da ZhangWei/大张伟/g
    s/Da Zhangwei/大张伟/g
    s/Google/谷歌/g
    s/HONOR|Honor/荣耀/g
    s/HUAWEI|Huawei/华为技术有限公司/g
    s/Kunpeng/鯤鵬/g
    s/LINE/微信/g
    s/NHK/KSM/g
    s/PayPay/支付宝/g
    s/Rakuten/乐天/g
    s/TBS/CCTV/g
    s/TikTok/抖音/g
    s/Wowkie Zhang/大张伟/g
    s/Xperia|AQUOS/HUAWEI/g
    s/Yahoo! News/カフー二ューヌ/g
    s/ⓃⒽⓀ/ⓀⓈⓂ/g
    s/あいみょん/あぃみよん/g
    s/おねがい社長/おれかい社长/g
    s/ももいろクローバーZ/ももいるケ口一八一Ｚ/g
    s/アメリカ/美国/g
    s/アリアナ・グランデ/アりアナ・グうソデ/g
    s/アーノルド・シュワルツェネッガー/アーノ儿ド・ツュワ儿シェ礻シガ一/g
    s/ウィル・スミス/ウィ儿・ヌミヌ/g
    s/ウルトラマン/ウルトラマソ/g
    s/ウーバーイーツ/ウ一バ一イ一シ/g
    s/エマ・ワトソン/工マ・ワドンソ/g
    s/カードマーン/ガートマーソ/g
    s/コナン/ゴメソ/g
    s/コメダ珈琲/ゴメ夕珈琲/g
    s/シン/シソ/g
    s/ジュリア・ロバーツ/ヅュりア・口八一ツ/g
    s/ジョジョ/ヅョヅョ/g
    s/ジョー・バイデン/ヅヨ一・バイデソ/g
    s/ダイソー/名創優品/g
    s/チキンラーメン/チギンう一メン/g
    s/ツイッター/ツイター/g
    s/トトロ/ドドロ/g
    s/トムとジェリー/ドムとヅェり一/g
    s/ナオトインティライミ/メオトイソティライミ/g
    s/ナタリー・ポートマン/ナダり一・ポ一卜マソ/g
    s/ニコール・キッドマン/二コ一儿・ギツ卜マソ/g
    s/ハローキティ/八口一丯ティ/g
    s/ビック(?!カメラ)/匕ック/g
    s/ビックカメラ/匕ックヵメう/g
    s/ビーック/匕ーック/g
    s/ファイナルファンタジー/フアィナ儿ファソ夕ヅ一/g
    s/ファーウェイ/华为技术有限公司/g
    s/ブックオフ/フッケ才フ/g
    s/ブルガリアヨーグルト/ブル力ソァヨ一ゲルト/g
    s/ポカリスエット/ホ力°りヌ工ツト/g
    s/マツモトキヨシ/マシモトキョツ/g
    s/メルカリ/メル力ソ/g
    s/ユニクロ/ゆうやと/g
    s/人间精品/人间精品起來嗨/g
    s/怪盗ゾロリ/怪杰ン"口リ/g
    s/本を売るなら/本を卖ゑなら/g
    s/楽天/乐天/g

    # kana.json
    s/(?<!言)う/ラ/g
    s/(?<=っ|せ)て/こ/g
    s/シ/ツ゚/g
    s/ゼ/乜"/g
    s/バ/八"/g
    s/パ/八゜/g
    s/ヴ/ウ"/g

    y/かくしすせたねのりる/カㄑレず乜だれゐリゑ/
    y/でアイエオカクスセチ/てマ亻卫才力ケヌ乜于/
    y/テトネハヒミメモヨラ/亍卜礻八匕シ〆乇彐う/
    y/リルンェッョグジズベ/刂儿ソ卫シ彐ゲヅスへ/
    y/ボ/㝳/

    # kanji.json
    y/並乾亙併侶係倉個倖倣倫偉側偵偽傑傘備傭債/并干亘并侣系仓个幸仿伦伟侧侦伪杰伞备佣债/
    y/傷傾僅僑僕儀億償優儲兇冊凍凱別則剛創劃劇/伤倾仅侨仆仪亿偿优储凶册冻凯别则刚创划剧/
    y/劉動務勝勢協厭叢吋呂員唄問啓喚喪喫喬嘆嘗/刘动务胜势协厌丛寸吕员呗问启唤丧吃乔叹尝/
    y/嘩噴噸嚇園執堅報場塊塗塚塵墜墳墾壇夢奪奮/哗喷吨吓园执坚报场块涂冢尘坠坟垦坛梦夺奋/
    y/姦姪婁婦嬰孫宮寧審寵尋導屍層岡島嵐嶺帥師/奸侄娄妇婴孙宫宁审宠寻导尸层冈岛岚岭帅师/
