function _main() {
    if [ -p /dev/stdin ]; then
        _to_ayashii "$(cat /dev/stdin)"
        return "${?}"
    fi

    if [ "${#}" -lt 1 ]; then
        _help
        _err "Must require arguments..."
        return 1
    fi

    for arg in "${@}"; do
        if [ "${arg}" = '--help' ]; then
            _help
            return 0
        fi
    done

    _to_ayashii "${*}"
    return "${?}"
}

_main "$@"
exit "${?}"
